{
  "root": true,
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "next", "plugin:prettier/recommended"],
  "rules": {
    "@next/next/no-img-element": "off",
    "prettier/prettier": ["error", {}, { "usePrettierrc": true }],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": [
      "warn",
      { "vars": "local", "args": "none", "ignoreRestSiblings": true }
    ],
    "react/prop-types": 0,
    "sort-imports": "off",
    "sort-keys": "warn",
    "sort-vars": "warn",
    "no-console": [
      2,
      {
        "allow": ["warn", "error"]
      }
    ]
  },
  "ignorePatterns": [
    ".next/*",
    ".vercel/*",
    "node_modules/*",
    "next.config.js",
    "postcss.config.js",
    "stylelint.config.js"
  ]
}
